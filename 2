<body>
    <script>
        function min(array) {
            if (array.length === 0) {
                return "Mảng trống";
            }
            let minValue = array[0]; 
            for (let i = 1; i < array.length; i++) { 
                if (array[i] < minValue) { 
                    minValue = array[i];
                }
            }
            return minValue;
        }
        const array1 = [3, 5, 1, 8, -3, 7, 8];
        const array2 = [7, 12, 6, 9, 20, 56, 89];
        const array3 = [];
        const array4 = [0, 0, 0, 0, 0, 0];

        console.log("Giá trị nhỏ nhất trong array1 là:", min(array1));
        console.log("Giá trị nhỏ nhất trong array2 là:", min(array2));
        console.log("Giá trị nhỏ nhất trong array3 là:", min(array3)); 
        console.log("Giá trị nhỏ nhất trong array4 là:", min(array4));
    </script>
</body>
